<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.pc.dao.TradeParamMapper">
    <resultMap id="BaseResultMap" type="com.mall.pc.domen.TradeParam">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="tradeid" property="tradeid" jdbcType="INTEGER" />
        <result column="param_zw" property="param_zw" jdbcType="VARCHAR" />
        <result column="param_yw" property="param_yw" jdbcType="VARCHAR" />
        <result column="param_jt" property="param_jt" jdbcType="VARCHAR" />
        <result column="param" property="param" jdbcType="VARCHAR" />
        <result column="tradenum" property="tradenum" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List">
       id,tradeid,param_zw,param_yw,param_jt,param,tradenum
    </sql>

    <select id="querytradeparam"  parameterType="Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from table_trade_param
        WHERE
        tradeid=#{tradeid}
        Order by param_zw
    </select>

    <select id="querytradeparamByparam"  parameterType="com.mall.pc.domen.TradeParam" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from table_trade_param
        where
        tradeid =#{tradeid}
        AND
        param=#{param}
    </select>


    <insert id="insertradeparam" parameterType="com.mall.pc.domen.TradeParam">
        insert into
        table_trade_param (
        tradeid,
        param,
        param_zw,
        param_yw,
        param_jt,
        tradenum
        )
        values (
        #{tradeid},
        #{param},
        #{param_zw},
        #{param_yw},
        #{param_jt},
        #{tradenum}
        )
    </insert>

    <update id="updatetradeparam" parameterType="com.mall.pc.domen.TradeParam">
        UPDATE
        table_trade_param
        SET
        param=#{param},
        param_zw= #{param_zw},
        param_yw=#{param_yw},
        param_jt=#{param_jt},
        tradenum= #{tradenum}
        where
        id=#{id}
    </update>


    <delete id="deltradeparam" parameterType="java.lang.Integer">
         DELETE from
        table_trade_param
        where
        id=#{id}
    </delete>


</mapper>